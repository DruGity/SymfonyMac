            <td>Ключ (уникальный)</td>
            <td>Заголовок</td>
            <td>Дата создания</td>
            <td></td>
        </tr>
    {% for page in pageList %}
        <tr>
            <td>{{ page.pageKey }}</td>
            <td>{{ page.title }}</td>
            <td>{{ page.dateCreatedAt.format("H:i:s d.m.Y") }}</td>
            <td>
                <a href="{{path ('my_shop_admin.page_delete', {id:page.id} )}}">Удалить</a><br>
                <a href="{{ path('my_shop_admin.page_edit', {id:page.id}) }}">Редактировать</a>
            </td>
        </tr>
    {% endfor %}
    </table>
