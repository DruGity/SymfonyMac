{% extends "@MyShopDefault/Default/layout.html.twig" %}

{% block body %}

    <div class="content_top">
            <div class="heading">
            <h3>Список Категорий</h3>
            </div>
            <div class="see">
                <p><a href="#">Выбрать категорию</a></p>
            </div>
            <div class="clear"></div>
        </div>
        
          <div class="section group">
           {% for cat in categoryList %}
                {% if cat.iconFileName is empty %}
            
                <div class="grid_1_of_4 images_1_of_4">
                    
                     <a href="{{ url("my_shop.product_list_by_category", {id_category:cat.id}) }}"><img src="/images/no-picture.png" class="img-responsive " alt=""></a>
                     <a href="{{ url("my_shop.product_list_by_category", {id_category:cat.id}) }}"><h2>{{ cat.name }}</h2></a>
                    <div class="price-details">
                       <div class="price-number">
                            <p><span class="rupees">Количество товаров:</span></p>
                        </div>
                             <div class="clear"></div>
                    </div>
                </div>

                {% else %}
                    <div class="grid_1_of_4 images_1_of_4">
                    
                     <a href="{{ url("my_shop.product_list_by_category", {id_category:cat.id}) }}"><img src="/photos/{{ cat.getIconFileName() }}" class="img-responsive " alt=""></a>
                     <a href="{{ url("my_shop.product_list_by_category", {id_category:cat.id}) }}"><h2>{{ cat.name }}</h2></a>
                    <div class="price-details">
                       <div class="price-number">
                            <p><span class="rupees">Количество товаров:</span></p>
                        </div>
                             <div class="clear"></div>
                    </div>
                </div>
                {% endif %}
            {% endfor %}
               
            </div>

    <div style = "margin: 0 auto; text-align: center;" >

    </div>
{% endblock %}



